# AI Scribe Environment Configuration Example
# Copy this file to {stage}.env and update with actual values

# Deployment configuration
STAGE=dev
REGION=us-east-1
AWS_PROFILE=default

# API endpoints (populated by deployment script)
API_URL=https://api-id.execute-api.region.amazonaws.com/stage
WEBSOCKET_URL=wss://ws-api-id.execute-api.region.amazonaws.com/stage

# Cognito configuration (populated by deployment script)
USER_POOL_ID=us-east-1_xxxxxxxxx
USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# Frontend configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://app.aiscribe.health

# Email configuration
ALERT_EMAIL=alerts@healthspaceai.com
FROM_EMAIL=noreply@aiscribe.health

# Third-party services (update in Secrets Manager)
DEEPGRAM_API_KEY=<stored-in-secrets-manager>
OPENAI_API_KEY=<stored-in-secrets-manager>

# Feature flags
ENABLE_TRANSCRIPTION=true
ENABLE_NOTE_GENERATION=true
ENABLE_MEDICAL_CODING=true
ENABLE_AUDIT_LOGGING=true

# Performance settings
MAX_AUDIO_DURATION_SECONDS=3600
MAX_FILE_SIZE_MB=500
WEBSOCKET_IDLE_TIMEOUT_SECONDS=600
LAMBDA_TIMEOUT_SECONDS=30

# Security settings
JWT_EXPIRATION_MINUTES=15
REFRESH_TOKEN_EXPIRATION_DAYS=1
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Cost control settings
MONTHLY_BUDGET_USD=1000
ALERT_THRESHOLD_PERCENT=80

# Debug settings (never enable in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false